<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="500px"
    android:layout_width="1080px"
    android:background="#ffffff"
    android:elevation="10dp"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="1080px"
        android:layout_height="120px"
        android:orientation="horizontal"
        android:layout_marginTop="50px">

        <EditText
            android:id="@+id/start_edit"
            android:layout_width="900px"
            android:layout_height="120px"
            android:layout_marginLeft="50px"
            android:background="#F2F2F2"
            android:hint="출발지를 입력하시오"
            android:inputType="textEmailAddress"
            android:padding="30px"
            android:textSize="40px"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="278dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="60px"
            android:layout_height="130px"
            android:background="#00FF0000"
            android:layout_weight="1"
            app:srcCompat="@drawable/close_fill0_wght400_grad0_opsz48" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="1080px"
        android:layout_height="160px"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/destination_edit"
            android:layout_width="900px"
            android:layout_height="120px"
            android:background="#F2F2F2"
            android:hint="도착지를 입력하시오"
            android:inputType="textEmailAddress"
            android:padding="30px"
            android:textSize="40px"
            android:layout_marginLeft="50px"
            android:layout_marginTop="35px"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="278dp" />
        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="60px"
            android:layout_height="130px"
            android:background="#00FF0000"
            android:layout_weight="1"
            android:layout_marginTop="35px"
            app:srcCompat="@drawable/close_fill0_wght400_grad0_opsz48" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="0px">

        <Button
            android:id="@+id/car_button"
            android:drawableLeft="@drawable/carxml"
            android:layout_width="350px"
            android:layout_height="110px"
            android:layout_marginLeft="150px"
            android:layout_gravity="center"
            android:background="@drawable/radius"
            android:textSize="45px"
            android:text="11,659 km"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/walk_button"
            android:drawableLeft="@drawable/walkxml"
            android:layout_width="350px"
            android:layout_height="110px"
            android:layout_gravity="center"
            android:background="@drawable/radius"
            android:layout_marginRight="150px"
            android:text="11,659 km"
            android:textSize="45px"
            android:layout_marginLeft="50px"
            android:textColor="#ffffff"/>
    </LinearLayout>


</LinearLayout>