<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="450px"
    android:layout_width="1080px"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:layout_width="400px"
        android:layout_height="350px"
        android:orientation="vertical"
        android:layout_marginLeft="100px"
        android:background="@drawable/greenmeter_bottom_card_radius">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/car_green_image"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="5px"
                    app:srcCompat="@drawable/car_green_image" />

                <TextView
                    android:id="@+id/type_car"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="승용차"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/car_km"
                    android:layout_width="90px"
                    android:layout_height="80px"
                    android:layout_marginLeft="20px"
                    android:text="89"
                    android:textSize="70px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_km"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="km" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="400px"
            android:layout_height="200px"
            android:background="#78AFAF"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/car_emission_co2_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CO2 배출량"
                android:textSize="30px"
                android:gravity="center"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/car_emission_co2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11,659"
                android:textSize="70px"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/gkm_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="g/km" />


        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="400px"
        android:layout_height="350px"
        android:orientation="vertical"
        android:layout_marginLeft="100px"
        android:background="@drawable/greenmeter_bottom_card_radius">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/walk_green_image"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="10px"
                    app:srcCompat="@drawable/walk_green_image" />

                <TextView
                    android:id="@+id/type_walk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="승용차"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/walk_km"
                    android:layout_width="90px"
                    android:layout_height="80px"
                    android:layout_marginLeft="20px"
                    android:text="89"
                    android:textSize="70px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_km2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="km" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="400px"
            android:layout_height="200px"
            android:background="#78AFAF"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/walk_emission_co2_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CO2 배출량"
                android:textSize="30px"
                android:gravity="center"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/walk_emission_co2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11,659"
                android:textSize="70px"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/gkm_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="g/km" />


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>